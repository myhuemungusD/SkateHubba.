{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["../../packages/ui/*"],
      "@skatehubba/skate-engine": ["../../packages/skate-engine/index.ts"],
      "@db/*": ["../../packages/db/*"],
      "@env/*": ["../../packages/env/*"],
      "@skate-types/*": ["../../packages/types/*"],
      "@zora/*": ["../../packages/zora/*"],
      "@hubba/*": ["../../packages/hubba-coin/*"],
      "@utils/*": ["../../packages/utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
