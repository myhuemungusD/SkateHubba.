{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["packages/ui/*"],
      "@db/*": ["packages/db/*"],
      "@types/*": ["packages/types/*"],
      "@zora/*": ["packages/zora/*"],
      "@hubba/*": ["packages/hubba-coin/*"],
      "@utils/*": ["packages/utils/*"]
    }
  },
  "include": ["apps", "packages"]
}
